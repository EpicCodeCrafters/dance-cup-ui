@{
    ViewBag.Title = "Регистрация пары на турнир";
}

<div class="container-fluid">
    <h1>Регистрация пары на турнир</h1>
    <form asp-action="RegisterCouple" method="post" id="registerForm">
        <input type="hidden" name="tournamentId" value="@ViewBag.TournamentId" />
        <div class="form-group">
            <label>Имя партнёра</label>
            <input type="text" class="form-control" name="firstParticipantFullName" id="firstParticipant">
        </div>
        <div class="form-group">
            <label>Имя партнёрши</label>
            <input type="text" class="form-control" name="secondParticipantFullName" id="secondParticipant">
        </div>
        <div class="form-group">
            <label>Название танцевальной организации</label>
            <input type="text" class="form-control" name="danceOrganizationName">
        </div>
        <div class="form-group">
            <label>Имя первого тренера</label>
            <input type="text" class="form-control" name="firstTrainerFullName">
        </div>
        <div class="form-group">
            <label>Имя второго тренера</label>
            <input type="text" class="form-control" name="secondTrainerFullName">
        </div>
        <div class="form-group">
            <label>Категории</label>
            <select name="categoriesIds" multiple class="form-control">
                @if (ViewBag.categories != null)
                {
                    foreach (var cat in  ViewBag.categories)
                    {
                        <option value="@cat.Id">@cat.Name</option>
                    }
                }
            </select>
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
    </form>
</div>

<script>
    document.getElementById('registerForm').addEventListener('submit', function (e) {
        const firstInput  = document.getElementById('firstParticipant');
        const secondInput = document.getElementById('secondParticipant');

        const first  = firstInput.value.trim();
        const second = secondInput.value.trim();

        // Если оба пустые — не отправляем
        if (!first && !second) {
            e.preventDefault();
            alert('Необходимо заполнить имя партнёра или партнёрши');
            return;
        }

        // Если первый пуст, а второй заполнен — перенос
        if (!first && second) {
            firstInput.value  = second;
            secondInput.value = '';
        }
    });
</script>

