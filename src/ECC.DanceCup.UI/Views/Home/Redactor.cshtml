@model ECC.DanceCup.Api.Presentation.Grpc.GetTournamentsResponse.Types.GetTournamentsItem
@using ECC.DanceCup.Api.Presentation.Grpc

<div class="container-fluid">
    <h1>Редактирование турнира</h1>
    <div class="card">
        <div class="card-header">
            <h3>@Model.Name</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label>Описание</label>
                <input type="text" class="form-control" value="@Model.Description" disabled>
            </div>
            <div class="form-group">
                <label>Дата</label>
                <input type="text" class="form-control" value="@Model.Date.ToDateTime().ToString("dd.MM.yyyy")"
                       disabled>
            </div>
            <div class="form-group">
                <label>Состояние</label>
                @if (Model.State == "Created")
                {
                    <input type="text" class="form-control" value="Турнир создан" disabled>
                }
                else if (Model.State == "RegistrationInProgress")
                {
                    <input type="text" class="form-control" value="Регистрация начата" disabled>
                }
                else if (Model.State == "RegistrationFinished")
                {
                    <input type="text" class="form-control" value="Регистрация окончена" disabled>
                }
                else if (Model.State == "Турнир начат")
                {
                    <input type="text" class="form-control" value="Турнир начат" disabled>
                }
            </div>

            @if (Model.State == "Created")
            {
                <form asp-action="StartRegistration" method="post">
                    <input type="hidden" name="tournamentId" value="@Model.Id"/>
                    <button type="submit" class="btn btn-primary">Открыть регистрацию</button>
                </form>
            }
            else if (Model.State == "RegistrationInProgress")
            {
                <form asp-action="FinishRegistration" method="post" class="d-inline">
                    <input type="hidden" name="tournamentId" value="@Model.Id"/>
                    <br/>
                    <button type="submit" class="btn btn-warning">Закрыть регистрацию</button>
                </form>
                <div class="form-group mt-3">
                    <label>Ссылка для регистрации</label>
                    <div class="input-group">
                        <input type="text" class="form-control"
                               value=@("http://localhost:5215/Home/PairRegistration/" + @Model.Id.ToString())
                               id="registrationLink" readonly>
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard()">
                                Скопировать
                            </button>
                        </div>
                    </div>
                </div>
            }
            else if (Model.State == "RegistrationFinished")
            {
                <form asp-action="ReopenRegistration" method="post" class="d-inline">
                    <input type="hidden" name="tournamentId" value="@Model.Id"/>
                    <br/>
                    <button type="submit" class="btn btn-info">Снова открыть регистрацию</button>
                </form>
                <br/>
                <form asp-action="StartTournament" method="post">
                    <input type="hidden" name="tournamentId" value="@Model.Id"/>
                    <br/>
                    <button type="submit" class="btn btn-success">Начать турнир</button>
                </form>
                <br/>
                <form>
                    <a href="@Url.Action("RegistrationResult", "Home", new { id = Model.Id })" class="btn btn-info">
                        <i class="mdi mdi-view-list"></i> Просмотреть результаты регистрации
                    </a>
                </form>
            }
            else if (Model.State == "Турнир начат")
            {
                <form asp-action="FinishTournament" method="post">
                    <input type="hidden" name="tournamentId" value="@Model.Id"/>
                    <button type="submit" class="btn btn-danger">Завершить турнир</button>
                </form>
                <br/>
                <form>
                    <a href="@Url.Action("RegistrationResult", "Home", new { id = Model.Id })" class="btn btn-info">
                        <i class="mdi mdi-view-list"></i> Просмотреть результаты регистрации
                    </a>
                </form>
            }
        </div>
    </div>

    <!-- File Attachments Section -->
    <div class="card mt-4">
        <div class="card-header">
            <h4>Прикреплённые файлы</h4>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label>Загрузить файл</label>
                <input type="file" id="fileInput" class="form-control-file" />
                <button type="button" class="btn btn-primary mt-2" onclick="uploadFile()">Загрузить</button>
            </div>
            <div id="uploadStatus" class="mt-2"></div>
            
            <hr />
            
            <h5>Список файлов</h5>
            <div id="filesList" class="mt-3">
                <p class="text-muted">Загрузка...</p>
            </div>
        </div>
    </div>
</div>

<script>
    const tournamentId = @Model.Id;

    function copyToClipboard() {
        var copyText = document.getElementById("registrationLink");
        copyText.select();
        copyText.setSelectionRange(0, 99999); // Для мобильных устройств
        document.execCommand("copy");
        alert("Ссылка скопирована: " + copyText.value);
    }

    async function uploadFile() {
        const fileInput = document.getElementById('fileInput');
        const statusDiv = document.getElementById('uploadStatus');
        
        if (!fileInput.files || fileInput.files.length === 0) {
            statusDiv.innerHTML = '<div class="alert alert-warning">Пожалуйста, выберите файл</div>';
            return;
        }

        const file = fileInput.files[0];
        const formData = new FormData();
        formData.append('file', file);
        formData.append('tournamentId', tournamentId);

        statusDiv.innerHTML = '<div class="alert alert-info">Загрузка...</div>';

        try {
            const response = await fetch('/Home/UploadAttachment', {
                method: 'POST',
                body: formData
            });

            const result = await response.json();

            if (result.success) {
                statusDiv.innerHTML = '<div class="alert alert-success">' + result.message + '</div>';
                fileInput.value = '';
                loadFilesList();
            } else {
                statusDiv.innerHTML = '<div class="alert alert-danger">Ошибка: ' + result.message + '</div>';
            }
        } catch (error) {
            statusDiv.innerHTML = '<div class="alert alert-danger">Ошибка при загрузке файла</div>';
        }
    }

    async function loadFilesList() {
        const filesListDiv = document.getElementById('filesList');
        
        try {
            const response = await fetch(`/Home/ListAttachments/${tournamentId}`);
            const result = await response.json();

            if (result.success && result.attachments && result.attachments.length > 0) {
                let html = '<ul class="list-group">';
                result.attachments.forEach(att => {
                    html += `
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>${att.name}</span>
                            <a href="/Home/DownloadAttachment/${tournamentId}/${att.number}" 
                               class="btn btn-sm btn-primary" 
                               download>
                                <i class="mdi mdi-download"></i> Скачать
                            </a>
                        </li>
                    `;
                });
                html += '</ul>';
                filesListDiv.innerHTML = html;
            } else {
                filesListDiv.innerHTML = '<p class="text-muted">Нет прикреплённых файлов</p>';
            }
        } catch (error) {
            filesListDiv.innerHTML = '<p class="text-danger">Ошибка при загрузке списка файлов</p>';
        }
    }

    // Load files list on page load
    document.addEventListener('DOMContentLoaded', function() {
        loadFilesList();
    });
</script>